{
  "name": "@tanfonto/storx",
  "version": "1.3.1",
  "description": "Flexible, centralised state management built with RxJS",
  "keywords": [
    "state management",
    "centralized store",
    "reactive",
    "observable",
    "frp",
    "rxjs",
    "tiny",
    "lightweight",
    "dependency-free",
    "simple",
    "typescript"
  ],
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "test:dev": "jest --no-cache --colors test/**/*.test.ts -o -b --coverage",
    "test": "jest test/**/*.test.ts -b --coverage --coverageReporters=text-lcov | coveralls",
    "watch": "yarn test:dev --watch",
    "build": "tsc"
  },
  "repository": {
    "url": "https://github.com/tanfonto/storx"
  },
  "types": "dist/index.d.ts",
  "author": "tanfonto",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "coveralls": "^3.0.3",
    "jest": "^24.7.1",
    "rxjs": "^6.4.0",
    "tap-diff": "^0.1.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333"
  },
  "peerDependencies": {
    "rxjs": "^6.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
