{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/@types",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "pretty": true,
    "diagnostics": true
  },
  "exclude": ["dist", "test/**/*"]
}
